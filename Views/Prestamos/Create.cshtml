@model ProyectoSS.Models.Prestamo
@{
    ViewBag.Title = "Solicitar Préstamo";
}

<!-- Estilos CSS -->
<style>
    /* Centrar el formulario en la pantalla */
    .form-container {
        width: 50%; /* Controla el ancho del formulario */
        margin: 0 auto; /* Centra el formulario horizontalmente */
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

        /* Título del formulario */
        .form-container h2 {
            text-align: center;
            color: #2c3e50;
        }

        /* Estilo para los encabezados dentro del formulario */
        .form-container h4 {
            color: #34495e;
        }

    /* Estilo para el formulario */
    .form-horizontal .form-group {
        margin-bottom: 15px;
    }

    /* Estilo para las etiquetas del formulario */
    .control-label {
        text-align: left;
        font-weight: bold;
        color: #333;
    }

    /* Estilo para los campos de entrada */
    .form-control {
        width: 100%; /* Hace que los campos de texto se extiendan todo el ancho disponible */
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    /* Estilo para el botón de envío */
    .btn {
        background-color: #3498db;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #2980b9;
        }

    /* Estilo para el enlace de acción */
    .action-link {
        text-align: center;
        margin-top: 20px;
    }

        .action-link a {
            color: #3498db;
            text-decoration: none;
            font-size: 16px;
        }

            .action-link a:hover {
                text-decoration: underline;
            }

    /* Estilo para los mensajes de validación */
    .text-danger {
        font-size: 12px;
        color: #e74c3c;
    }
</style>

<!-- Contenedor del formulario -->
<div class="form-container">
    <h2>Solicitar Préstamo</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Nuevo Préstamo</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <!-- Monto -->
            <div class="form-group">
                @Html.LabelFor(model => model.Monto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Monto, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Plazo -->
            <div class="form-group">
                @Html.Label("Plazo (meses)", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Plazo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Plazo, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Tasa de Interés -->
            <div class="form-group">
                @Html.Label("Tasa de Interés (%)", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TasaInteres, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TasaInteres, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Tipo de Pago -->
            <div class="form-group">
                @Html.LabelFor(model => model.TipoPago, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.TipoPago, new SelectList(new List<string> { "Fijo", "Decreciente" }), "Seleccione...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TipoPago, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Botón de Submit -->
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Solicitar" class="btn" />
                </div>
            </div>
        </div>
    }
</div>

<!-- Enlace para volver -->
<div class="action-link">
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
