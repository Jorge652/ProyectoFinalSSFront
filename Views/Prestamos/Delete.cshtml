@model ProyectoSS.Models.Prestamo
@{
    ViewBag.Title = "Eliminar Préstamo";
}
<h2>Eliminar Préstamo</h2>
<h3>¿Está seguro de eliminar este préstamo?</h3>
<div>
    <h4>Préstamo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Model.Id</dd>
        <dt>Monto</dt>
        <dd>@Model.Monto</dd>
        <dt>Plazo</dt>
        <dd>@Model.Plazo</dd>
        <dt>Tasa de Interés</dt>
        <dd>@Model.TasaInteres</dd>
        <dt>Tipo de Pago</dt>
        <dd>@Model.TipoPago</dd>
        <dt>Fecha Solicitud</dt>
        <dd>@Model.FechaSolicitud.ToShortDateString()</dd>
        <dt>Estado</dt>
        <dd>@Model.Estado</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
@Html.ActionLink("Cancelar", "Index");
}
</div>
