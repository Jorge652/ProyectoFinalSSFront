@model ProyectoSS.Models.Pago

<h2>Registrar Pago</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Campo oculto para enviar el PrestamoId -->
    @Html.HiddenFor(model => model.PrestamoId)

    <div class="form-group">
        @Html.LabelFor(model => model.Monto, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Monto, new
        {
            @class = "form-control",
            @type = "text",
            @pattern = "[0-9]+([.,][0-9]+)?",
            @lang = "en",
            @inputmode = "decimal",
            @placeholder = "Ingrese el monto en dólares"
        })
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
}
